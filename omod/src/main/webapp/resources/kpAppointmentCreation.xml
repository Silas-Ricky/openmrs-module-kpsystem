<htmlform formUuid="6552497e-946c-11e7-9ae7-d567856360b8" formName="KP Appointment Form"
		  formEncounterType="1f64fc1a-35db-11e9-b210-d663bd873d93" formVersion="1.0">

	<macros>
		appointment_date=162502
		appointment_type=984
		appointment_notes=163042
	</macros>

	<!-- Flowsheet table view -->
	<ifMode mode="VIEW" include="true">

		<table class="visit-table data-entry-table">
			<thead class="visit-table-header">
				<tr>
					<td rowspan="2">Visit Date</td>
					<td rowspan="2">Appointment Date</td>
					<td rowspan="2">Appointent Type</td>
					<td rowspan="2">Appointent Notes</td>
				</tr>
			</thead>
			<tbody class="visit-table-body">
				<tr class="visit-table-row">
					<td class="nowrap visit-date">
						<!-- Encounter Date -->
						<encounterDate />
					</td>
					<td>
						<!-- Appointment date -->
						<obs conceptId="$appointment_date" id="appointment_date_entered"/>
					</td>
					<td>
						<!-- Appointment Type -->
						<obs conceptId="$appointment_type" />
					</td>
					<td>
						<!-- Appointment Notes -->
						<obs conceptId="$appointment_notes" />
					</td>
				</tr>
			</tbody>
		</table>

	</ifMode>

	<!-- Data entry view -->
	<ifMode mode="VIEW" include="false">

		<table class="visit-edit-table">
			<tr>
				<th>Visit Date</th>
				<td><encounterDate id="visitDate" size="20" default="today" /></td>
			</tr>
			<tr>
				<th>Location</th>
				<td><encounterLocation id="visitLocation" default="GlobalProperty:kenyaemr.defaultLocation" type="autocomplete" /></td>
			</tr>
			<tr>
				<th>Provider</th>
				<td><encounterProvider type="autocomplete" default="1" /></td>
			</tr>
			<tr>
				<th>Appointment Date</th>
				<td class="focus-field"><obs conceptId="$appointment_date" id="appointment_date_input" /></td>
			</tr>
			<tr>
				<th>Appointment Type</th>
				<td><obs conceptId="$appointment_type" id="appointment_type_input" /></td>
			</tr>
			<tr>
				<th>Appointment Notes</th>
				<td><obs conceptId="$appointment_notes" id="appointment_notes_input" /></td>
			</tr>

		</table>

		<submit/>

	</ifMode>

</htmlform>