<htmlform formUuid="01d46fa8-a648-461c-a66f-5e8a125c8a54" formName="Risk Reduction Screening"
          formEncounterType="dd06ac5c-70b4-4d8e-96a3-05edc9019f8f" formVersion="1.0">

    <macros>
        risk_screened =165045
        risk_results=165050
        risk_treated=165053
        risk_referred=1272
        risk_remarks=161595
    </macros>

    <!-- Flowsheet table view -->
    <ifMode mode="VIEW" include="true">

        <table class="visit-table data-entry-table">
            <thead class="visit-table-header">
                <tr>
                    <td width="156" valign="top"><p>Visit date</p></td>
                    <td width="156" valign="top"><p>Screened for risk</p></td>
                    <td width="156" valign="top"><p>Results</p></td>
                    <td width="156" valign="top"><p>Treated</p></td>
                    <td width="156" valign="top"><p>Referred</p></td>
                    <td width="156" valign="top"><p>Action done</p></td>
                   </tr>
            </thead>
            <tbody class="visit-table-body">
                <tr class="visit-table-row">
                    <td class="nowrap visit-date">
                        <!-- Encounter Date -->
                        <encounterDate />
                    </td>
                    <td>
                        <!-- SCREENED-->
                        <obs conceptId="$risk_screened" id="$risk_screened"
                             answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                             answerLabel="Yes,No"
                             style="dropdown"/>
                    </td>
                    <td>
                        <!-- RESULTS -->
                        <obs conceptId="$risk_results"
                             answerConceptIds="165081,165078"
                             answerLabels="Eligible,Not Eligible"
                             style="dropdown"/>
                    </td>
                    <td>
                        <!-- TREATED-->
                        <obs conceptId="$risk_treated"
                             answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                             answerLabel="Supported,Not supported"
                             style="dropdown"/>
                    </td>
                    <td>
                        <!-- REFERRED -->
                        <obs conceptId="$risk_referred"
                             answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                             answerLabel="Yes,No"
                             style="dropdown"/>
                    </td>
                    <td>
                        <!-- ACTION -->
                        <obs conceptId="$risk_remarks"
                             answerConceptIds="165070,165069"
                             answerLabels="Counselling,EBl Provided"
                             style="dropdown" />
                    </td>
                </tr>
            </tbody>
        </table>

    </ifMode>

    <!-- Data entry view -->
    <ifMode mode="VIEW" include="false">

        <table class="visit-edit-table">
            <tr>
                <th>Visit Date</th>
                <td><encounterDate id="visitDate" size="20" default="today" /></td>
            </tr>
            <tr>
                <th>Screened for risk</th>
                <td>  <obs conceptId="$risk_screened" id="risk_screened_input"
                           answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                           answerLabel="Yes,No"
                           style="dropdown"/>
                </td>
            </tr>
            <tr>
                <th>Results</th>
                <td> <obs conceptId="$risk_results"
                          answerConceptIds="165081,165078"
                          answerLabels="Eligible,Not Eligible"
                          style="dropdown"/>
                </td>
            </tr>
            <tr>
                <th>Treated</th>
                <td>
                    <obs conceptId="$risk_treated"
                         answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                         answerLabel="Yes,No"
                         style="dropdown"/>
                </td>
            </tr>
            <tr>
                <th>Referred</th>
                <td>
                    <obs conceptId="$risk_referred"
                         answerConceptIds="1065AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA,1066AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                         answerLabel="Yes,No"
                         style="dropdown"/>
                </td>
            </tr>
            <tr>
                <th>Action done</th>
                <td>
                    <obs conceptId="$risk_remarks"
                         answerConceptIds="165070,165069"
                         answerLabels="Counselling,EBl Provided"
                         style="dropdown" />
                </td>
            </tr>
        </table>
        <submit/>
    </ifMode>
</htmlform>